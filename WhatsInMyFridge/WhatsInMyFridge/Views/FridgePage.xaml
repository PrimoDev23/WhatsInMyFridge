<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WhatsInMyFridge.Views.FridgePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:WhatsInMyFridge.Controls"
    xmlns:models="clr-namespace:WhatsInMyFridge.Models"
    xmlns:views="clr-namespace:WhatsInMyFridge.Views"
    xmlns:vm="clr-namespace:WhatsInMyFridge.ViewModels"
    x:Name="CurrFridgePage"
    Title="What's in my fridge"
    x:DataType="vm:FridgeViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="cooking_hat_white.png" />
    </ContentPage.ToolbarItems>

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="130" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Aspect="AspectFill"
                Source="ingridients_view_dark.png" />
            <Entry
                x:Name="txtSearch"
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                BackgroundColor="#77000000"
                HorizontalOptions="FillAndExpand"
                Placeholder="Suchtext"
                TextChanged="txtSearch_TextChanged"
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                WidthRequest="250" />
        </Grid>

        <AbsoluteLayout Grid.Row="1">
            <CollectionView
                Grid.Row="1"
                Margin="10"
                x:DataType="vm:FridgeViewModel"
                ItemSizingStrategy="MeasureAllItems"
                ItemsSource="{Binding FilteredFoodList}"
                SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Food">
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Command="{Binding Path=BindingContext.usedCommand, Source={x:Reference CurrFridgePage}}"
                                        CommandParameter="{Binding .}"
                                        IconImageSource="swipe_used_black"
                                        Text="Verwendet" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Frame
                                Padding="10"
                                BackgroundColor="White"
                                CornerRadius="20"
                                HasShadow="True">
                                <StackLayout Orientation="Horizontal">
                                    <Image
                                        HeightRequest="60"
                                        Source="{Binding main_img}"
                                        WidthRequest="60" />
                                    <Label
                                        Margin="5,0,0,0"
                                        Text="{Binding combinedAmountName}"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center" />
                                    <Image
                                        HorizontalOptions="EndAndExpand"
                                        Source="{Binding nutrition_img_source}"
                                        WidthRequest="60" />
                                </StackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ImageButton
                x:Name="fab"
                AbsoluteLayout.LayoutBounds=".95,.95,80,80"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="{StaticResource colorAccent}"
                Clicked="fab_Clicked"
                CornerRadius="50" />
        </AbsoluteLayout>

        <views:AfterScanPopup
            x:Name="afterScanPopup"
            Grid.Row="0"
            Grid.RowSpan="2"
            IsVisible="False" />

        <views:UsedPopup
            x:Name="usedPopup"
            Grid.Row="0"
            Grid.RowSpan="2"
            IsVisible="False" />

    </Grid>

</ContentPage>